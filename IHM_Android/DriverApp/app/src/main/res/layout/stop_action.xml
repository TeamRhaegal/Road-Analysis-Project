<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android" android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context="rhaegal.DriverApp.LogDisplay"
    android:background="#002e39">

    <TextView
        android:id="@+id/title_stop"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        android:textSize="30sp"
        android:gravity="center"
        android:textStyle="bold"
        android:text = "@string/stopActionTitle"
        android:textColor="#ffffff"/>
    <TextView
        android:id="@+id/message_stop"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp"
        app:layout_constraintTop_toBottomOf="@+id/title_stop"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        android:textSize="20sp"
        android:gravity="center"
        android:textStyle="bold"
        android:text = "@string/stopActionMsg"
        android:textColor="#ffffff"/>

    <ImageView
        android:id="@+id/image_stop_action"
        android:layout_width="215dp"
        android:layout_height="198dp"
        app:layout_constraintTop_toBottomOf="@+id/message_stop"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:srcCompat="@drawable/stop_sign_action" />

</android.support.constraint.ConstraintLayout>